<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="100dp"
        android:textSize="70dp"
        android:text="G"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tv_destination"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="122dp"
        android:layout_toRightOf="@id/tv_forgot"
        android:text="O"
        android:textColor="#FF9800"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="122dp"
        android:layout_toRightOf="@id/tv_destination"
        android:text="O"
        android:textColor="#FFEB3B"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/tv3"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="110dp"
        android:textSize="55dp"
        android:text="g"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/tv4"
        android:text="l"
        android:textColor="#8BC34A"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/tv5"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="108dp"
        android:textSize="60dp"
        android:text="e"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="200dp"
        android:text="Sign In"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="250dp"
        android:text="with your Google Account"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv8"
        android:layout_marginTop="50dp"
        android:layout_margin="40dp"
        android:hint="Username or Email"/>

    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_email"
        android:text="Forgot email?"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="50dp"
        android:textColor="#2196F3" />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Create account?"
        android:textColor="#2196F3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="20dp"
        android:background="#2196F3"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

</RelativeLayout>